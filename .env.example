# Flask
FLASK_DEBUG=False
SECRET_KEY=CHANGE_ME_WITH_A_STRONG_SECRET_KEY
FLASK_ENV=production

# Server
FLASK_PORT=5000
HOST=0.0.0.0

# Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=33554432
MAX_FILE_SIZE=33554432
FILE_EXPIRY_HOURS=24

# Security (set SESSION_COOKIE_SECURE=True when running behind HTTPS)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate limiting
CONVERT_RATE_LIMIT=10 per minute
# RATELIMIT_STORAGE_URI=redis://localhost:6379

# Conversion timeout (seconds)
CONVERSION_TIMEOUT=120

# Stripe â€” get from https://dashboard.stripe.com/apikeys
# Use sk_test_ / pk_test_ for testing, sk_live_ / pk_live_ for production
STRIPE_SECRET_KEY=sk_test_REPLACE_ME
STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_ME
STRIPE_PRICE_ID=price_REPLACE_ME

# Freemium limits
FREE_CONVERSIONS_LIMIT=3
PAID_CONVERSIONS_AMOUNT=20
