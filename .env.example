# Flask Configuration
FLASK_DEBUG=False
SECRET_KEY=CHANGE_ME_WITH_A_STRONG_SECRET_KEY
FLASK_ENV=production

# Server Configuration
FLASK_PORT=5000
HOST=0.0.0.0

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=33554432
MAX_FILE_SIZE=33554432
FILE_EXPIRY_HOURS=24

# Security (set SESSION_COOKIE_SECURE=True when running behind HTTPS)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (uses in-memory by default; set Redis URI for multi-worker setups)
CONVERT_RATE_LIMIT=10 per minute
# RATELIMIT_STORAGE_URI=redis://localhost:6379

# Conversion timeout in seconds
CONVERSION_TIMEOUT=120
